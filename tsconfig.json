{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "CommonJS",
    "target": "ES2020",
    "declaration": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "allowJs": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ],
    "incremental": true,
    "paths": {
      "@modules/*": [
        "src/modules/*"
      ],
      "@shared/*": [
        "src/shared/*"
      ]
    }
  },
  "include": [
    "src",
    "test"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".husky",
    "db"
  ]
}